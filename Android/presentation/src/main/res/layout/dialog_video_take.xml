<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="viewModel"
            type="kr.hs.dgsw.juyeop.interview.viewmodel.dialog.VideoTakeViewModel" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/drawable_dialog">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:ignore="UselessLeaf,UselessParent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="25dp"
                tools:ignore="UselessParent">

                <View
                    android:layout_width="0dp"
                    android:layout_height="25dp"
                    android:layout_weight="1" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/bold"
                        android:text="@string/text_video"
                        android:textColor="@android:color/black"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end">

                    <ImageView
                        android:id="@+id/cancelImageView"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="25dp"
                        android:src="@drawable/ic_clear"
                        android:tint="@android:color/black"
                        android:onClick="@{() -> viewModel.cancelEvent()}"
                        tools:ignore="ContentDescription" />
                </LinearLayout>
            </LinearLayout>

            // video_check.xml에 있는 SurfaceView와 id 중복이 되네요
            <SurfaceView
                android:id="@+id/container"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:layout_marginTop="25dp"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@={viewModel.timerCount}"
                android:textSize="25sp"
                android:textColor="@android:color/black"
                android:fontFamily="@font/regular"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                tools:text="00:00"/>

            <ImageView
                android:id="@+id/recordImageView"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_radio"
                android:tint="@android:color/holo_red_dark"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="25dp"
                android:onClick="@{() -> viewModel.recordEvent()}"
                tools:ignore="ContentDescription" />
        </LinearLayout>
    </FrameLayout>
</layout>